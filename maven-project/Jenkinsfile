pipeline {
    agent any
    tools { 
      maven 'maven' 
      jdk 'jdk'
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn -f ./maven-project/pom.xml clean compile'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn -f ./maven-project/pom.xml test'
            }
            post {
                always {
                    junit allowEmptyResults: true, testResults:'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                sh './simple-java-maven-app/jenkins/scripts/deliver.sh'
            }
        }
    }
}
